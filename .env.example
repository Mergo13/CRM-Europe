# Copy this file to .env and adjust for your local/prod environment

# Application environment
APP_ENV=development
APP_DEBUG=1

# Base URL (used by helpers for links if needed)
APP_URL=http://localhost:8000

# Database configuration
# Either provide a full DSN via DB_DSN or host/port/name/user/pass separately
# Example DSN: mysql:host=127.0.0.1;port=3306;dbname=crm_app;charset=utf8mb4
DB_DSN=
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=crm_app
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Inventory configuration (optional)
INVENTORY_PREVENT_NEGATIVE=0
DEFAULT_WAREHOUSE_ID=1

# Mail (if SMTP is used elsewhere in project)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ENCRYPTION=tls
