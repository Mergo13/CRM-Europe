<?xml version="1.0"?>
<ruleset name="Rechnung-app Coding Standard">
    <description>PSR-12 for PHP sources with minimal legacy exclusions.</description>

    <file>includes</file>
    <file>pages</file>
    <file>config</file>
    <file>public_api_get_offene_rechnungen.php</file>
    <file>index.php</file>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>public/*</exclude-pattern>
    <exclude-pattern>pdf/*</exclude-pattern>
    <exclude-pattern>pdfs/*</exclude-pattern>
    <exclude-pattern>assets/*</exclude-pattern>
    <exclude-pattern>bootstrap/*</exclude-pattern>
    <exclude-pattern>scripts/*</exclude-pattern>

    <arg name="basepath" value="." />
    <arg name="colors" value="true" />
    <arg name="extensions" value="php" />

    <rule ref="PSR12">
        <!-- Allow long lines in legacy files without errors (only warn) -->
        <type>warning</type>
    </rule>

    <!-- Generic tidy-ups -->
    <rule ref="Generic.PHP.DisallowShortOpenTag" />
    <rule ref="Generic.Formatting.SpaceAfterNot" />
</ruleset>
